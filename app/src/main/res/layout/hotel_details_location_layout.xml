<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/fragment_hotel_details">

    <TextView
        android:id="@+id/hotels_location_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/location_margin"
        android:paddingLeft="@dimen/location_padding"
        android:textColor="@color/color_white"
        android:text="@string/location"
        android:textSize="17sp" />


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_margin"
        app:cardCornerRadius="@dimen/card_corners">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_card_background"
            android:padding="@dimen/street_padding">

            <TextView
                android:id="@+id/street_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_white"
                android:layout_marginLeft="@dimen/street_margin"
                android:gravity="center|left"
                android:maxLines="2"
                android:text=""
                android:textSize="16sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</merge>