<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/fragment_hotel_details">

    <TextView
        android:id="@+id/hotels_prices_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_white"
        android:layout_marginTop="@dimen/price_text_view_margin"
        android:paddingLeft="@dimen/price_text_view_padding"
        android:text="@string/price"
        android:textSize="17sp" />

    <ProgressBar
        android:id="@+id/progress_bar_load_prices"
        android:layout_width="@dimen/progress_bar_size"
        android:layout_height="@dimen/progress_bar_size"
        android:indeterminateTint="@color/color_white"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/details_progress_bar_margin" />


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_margin"
        app:cardCornerRadius="@dimen/card_corners">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/hotels_prices_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:isScrollContainer="false"
            android:background="@color/color_card_background"
            android:orientation="horizontal">

        </android.support.v7.widget.RecyclerView>
    </android.support.v7.widget.CardView>


</merge>